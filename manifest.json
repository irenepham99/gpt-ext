{
  "manifest_version": 3,
  "name": "GPT Scroll 'n Trim",
  "version": "3.0",
  "description": "Have a better experience on ChatGPT with response length control and scroll to response top!",
  "action": {
    "default_icon": "gpt-ext-icon.png"
  },
  "content_scripts": [
    {
      "js": ["dist/content.js"],
      "matches": [
        "*://chatgpt.com/*"
      ],
      "css": ["src/style.css", "src/all.min.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "webfonts/*",
        "src/all.min.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}